<%- include ('../partials/header') -%>

<div class = "container">
    <header class = "jumbotron">
        <div class="container">
            <h1>Welcome to yelpCamp!</h1>
            <p>Enjoy yourself!</p>
            <p> <a class="btn btn-primary btn-large" href = "/campgrounds/new">Add a new campgrounds</a> </p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campgrounds){ %>
            <div class="col-md-3 col-sm-6">   <!-- 12网格结构，最开始四张，后来两张，最后自动变为一张 -->
                <div class="thumbnail">   <!--图片网格显示 -->
                    <img src = "<%= campgrounds.image %>">    
                    <div class = "caption">
                        <h4> <%= campgrounds.name %> </h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include ('../partials/footer') -%>